{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "." }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/server.js" },
    { "source": "/admin/assets/:path*", "destination": "/public/admin/dist/assets/:path*" },
    { "source": "/admin/:path*", "destination": "/server.js" },
    { "source": "/shared/:path*", "destination": "/public/shared/:path*" },
    { "source": "/Services/:path*", "destination": "/public/Services/:path*" },
    { "source": "/((?!admin|api|shared|Services|assets|.*\\..*).*)", "destination": "/server.js" }
  ]
}
