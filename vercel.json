{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/server.js" },
    { "source": "/admin/:path*", "destination": "/server.js" },
    { "source": "/shared/:path*", "destination": "/public/shared/:path*" },
    { "source": "/Services/:path*", "destination": "/public/Services/:path*" },
    { "source": "/((?!assets|.*\\..*).*)", "destination": "/server.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'self' https://zw-express.vercel.app http://localhost:5001 https://algolend-demo.vercel.app;" },
        { "key": "X-Frame-Options", "value": "ALLOWALL" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://algolend-demo.vercel.app" }
      ]
    }
  ]
}